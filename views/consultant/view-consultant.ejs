    <!-- Form Section Starts here -->
    <form action="/create-consultant" method="POST">


        <!-- Requirement ID Section -->
        <section class="heading mt-4">

            <div class="container row mx-auto form-inline" style="width: 500px; text-align: center; padding-left:5%;">
                <h3 class="form-group mb-2">ConsultantID #  <%= consultant.consultantId %>

                    <!-- <input type="text" class="form-group mx-sm-3 form-control-plaintext" name="reqID">  -->

                </h3>
                <hr class="style-two">
            </div>


            <!-- Form Button Section  -->
            <section class="func-buttons mb-4">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group float-right">
                                <input type="url" class="form-control" name="consultantId" hidden>
                                <input type="url" class="form-control" name="createdBy" hidden>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group float-end">
                                <a href="/get-update-consultant/<%=consultant._id%>" class="btn btn-primary text-white mb-0 me-0 submit-create-form"
                                    style="width: 100px">Edit</a>
                                <a href="/consultant-list" class="btn btn-danger text-white mb-0 me-0"
                                    type="button"></i>Back</a>

                                <!-- <a href ="/home/1" class="btn shadow rounded custom-button-3">Cancel</a> -->
                            </div>
                        </div>
                    </div>
                    <hr style="border: 1px solid #007BFF">
                </div>
            </section>
            <!-- Form Button Section Ends Here  -->

        </section>
        <!-- Requirement ID Section Ends Here -->


        <!-- Section 1 - contains information about Communication & rates -->
        <section class="communication mt-4 mb-4">
            <div class="container">
                <div class="section-heading">
                    <h3><i class="far fa-hand-point-down"></i> 1. Consultant Info</h3>
                </div>
                <hr class="style-two">
            </div>

            <div class="container section-content">

                <!-- Row 1 - Contains status and next Step -->
                <div class="row">
                    <!-- column 1 -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="fw-bold" for="nextStep">1.1 Consultant Name</label>
                            <p><%= consultant.consultantName %></p>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="fw-bold" for="assignedTo">1.2 Visa Status</label>
                            <p><%= consultant.visaStatus %></p>
                            
                        </div>
                    </div>

                    <!-- column 2 -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="fw-bold" for="nextStep">1.3 Date of Birth</label>
                            <p><%= consultant.dob.toLocaleDateString() %></p>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="fw-bold" for="timeZone">1.4 Consultant Timezone</label>
                            <p><%= consultant.timeZone %></p>
                        </div>
                    </div>

                </div>
                <!-- Row 1 Ends Here -->

                <!-- Row 2 - Contains information about tax term and Remote -->
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="fw-bold" for="Address">1.5 Current Address</label>
                            <p><%= consultant.currentAddress %></p>

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="fw-bold" for="City">1.6 Previous Address</label>
                            <p><%= consultant.previousAddress %></p>

                        </div>
                    </div>

                    

                </div>
                <!-- ROW 2 Ends Here -->

                <!-- Row 3 Marketing persons comments -->

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="fw-bold" for="degree">1.7 Degree Name</label>
                            <p><%= consultant.degree %></p>

                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="fw-bold" for="university">1.8 University</label>
                            <p><%= consultant.university %></p>

                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="fw-bold" for="yearPassing">1.9 Year of Passing</label>
                            <p><%= consultant.yearPassing %></p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="fw-bold" for="SSN">1.10 SSN</label>
                            <p><%= consultant.ssn %></p>

                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="fw-bold" for="dlno">1.11 Driving License</label>
                            <p><%= consultant.dlNo %></p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="fw-bold" for="psuedoName">1.12 Psuedo Name of Consultant</label>
                            <p><%= consultant.psuedoName %></p>
                        </div>
                    </div>
                </div>

            </div>
        </section>

        <!-- Section 1 Ends Here -->

        <section class="communication mt-4 mb-4">
            <div class="container">
                <div class="section-heading">

                    <h3><i class="far fa-hand-point-down"></i> 2. Resume Info</h3>
                </div>
                <hr class="style-two">
            </div>

            <div class="container section-content">
                <% projects.forEach((project,i) =>{ %>

                    <div class="row">
                        <div class="col-md-12">
                            <h4>PROJECT <%=i+1%>
                            </h4>
                            <hr style="width: 10% ;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="fw-bold" for="ProjectName"> Project Name</label>
                                <p><%= project.name %></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="fw-bold" for="ProjectState"> Project City</label>
                                <p><%= project.city %></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="fw-bold" for="ProjectState"> Project State</label>
                                <p><%= project.state %></p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="fw-bold" for="projectStartDate"> Project Start Date</label>
                                <p><%= project.startDate %></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="fw-bold" for="projectEndDate"> Project End Date</label>
                                <p><%= project.endDate %></p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="fw-bold" for="projectDescrption"> Project Description</label>
                                <p class="text-area-commentview"><%= project.description %></p>
                            </div>
                        </div>
                    </div>
                    <%})%>
                    <hr style="border: 1px solid #007BFF;">
            </div>

            <div class="container">
                <div class=" float-start">
                    <p> Created by <strong>
                            <%= consultant.createdBy %>
                        </strong> on date <strong>
                            <%= consultant.createdAt.toLocaleDateString()%>
                        </strong> Time @ <strong>
                            <%= consultant.createdAt.toLocaleTimeString()%>
                        </strong></p>
                </div>
    
                <div class=" float-end">
                    <em>
                        <p> Updated by <strong>
                                <%= consultant.updatedBy %>
                            </strong> on date <strong>
                                <%= consultant.updatedAt.toLocaleDateString()%>
                            </strong> Time @ <strong>
                                <%= consultant.updatedAt.toLocaleTimeString()%>
                            </strong></p>
                    </em>
                </div>
            </div>

        </section>

    </form>
    </div>
</div>


    <%- include('../partials/footer1.ejs')%>