<%- include('../partials/header1.ejs') %>

    <!-- Form Section Starts here -->
    <form action="/create-consultant" method="POST">


        <!-- Requirement ID Section -->
        <section class="heading mt-4">

            <div class="container row mx-auto form-inline" style="width: 500px; text-align: center; padding-left:5%;">
                <h3 class="form-group mb-2">ConsultantID #

                    <!-- <input type="text" class="form-group mx-sm-3 form-control-plaintext" name="reqID">  -->

                </h3>
                <hr class="style-two">
            </div>


            <!-- Form Button Section  -->
            <section class="func-buttons mb-4">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group float-right">
                                <input type="url" class="form-control" name="consultantId" hidden>
                                <input type="url" class="form-control" name="createdBy" hidden>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group float-end">
                                <button type="submit" class="btn btn-primary text-white mb-0 me-0 submit-create-form"
                                    style="width: 100px">Save</button>
                                <a href="/consultant-list" class="btn btn-danger text-white mb-0 me-0"
                                    type="button"></i>Back</a>

                                <!-- <a href ="/home/1" class="btn shadow rounded custom-button-3">Cancel</a> -->
                            </div>
                        </div>
                    </div>
                    <hr style="border: 1px solid #007BFF">
                </div>
            </section>
            <!-- Form Button Section Ends Here  -->

        </section>
        <!-- Requirement ID Section Ends Here -->


        <!-- Section 1 - contains information about Communication & rates -->
        <section class="communication mt-4 mb-4">
            <div class="container">
                <div class="section-heading">

                    <h3><i class="far fa-hand-point-down"></i> 1. Consultant Info</h3>
                </div>
                <hr class="style-two">
            </div>

            <div class="container section-content">

                <!-- Row 1 - Contains status and next Step -->
                <div class="row">
                    <!-- column 1 -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="consultantStatus">1.1 Consultant Status</label>
                            <select class="form-select" name="consultantStatus">
                                <option value="Active"> Active</option>
                                <option value="Not Active">Not Active</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="nextStep">1.2 Consultant Name</label>
                            <input type="text" class="form-control" placeholder="Name" name="consultantName">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="assignedTo">1.3 Visa Status</label>
                            <select class="form-select" name="visaStatus">
                                <% visaStatus.forEach((visa, i) =>{%>
                                <option value="<%=visa%>"> <%=i+1%>. <%=visa%></option>
                                <%})%>
                            </select>
                        </div>
                    </div>

                    <!-- column 2 -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="nextStep">1.4 Date of Birth</label>
                            <input type="date" class="form-control" placeholder="DOB" name="dob" max="2005-12-31">
                        </div>
                    </div>

                </div>
                <!-- Row 1 Ends Here -->

                <!-- Row 2 - Contains information about tax term and Remote -->
                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Address">1.5 Current Address</label>
                            <input type="text" name="currentAddress" class="form-control" placeholder="Address">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Address">1.6 Previous Address</label>
                            <input type="text" name="previousAddress" class="form-control" placeholder="Address">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Address">1.14 Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Email">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="Address">1.15 Phone</label>
                            <input type="text" name="phone" class="form-control" placeholder="Phone">
                        </div>
                    </div>

                </div>
                <!-- ROW 2 Ends Here -->

                <!-- Row 3 Marketing persons comments -->

                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="timeZone">1.7 Consultant Timezone</label>
                            <select class="form-select" name="timeZone" id="exampleFormControlSelect1">
                                <% timeZone.forEach((time, i) =>{%>
                                    <option value="<%=time%>"> <%=i+1%>. <%=time%></option>
                                <%})%>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="degree">1.8 Degree Name</label>
                            <input type="text" name="degree" class="form-control" placeholder="Degree name">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="university">1.9 University</label>
                            <input type="text" name="university" class="form-control" placeholder="university">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="yearPassing">1.10 Year of Passing</label>
                            <input type="text" name="yearPassing" class="form-control" placeholder="Year of Passing">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SSN">1.11 SSN</label>
                            <input type="text" name="ssn" class="form-control" placeholder="Enter ssn">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dlno">1.12 Driving License</label>
                            <input type="text" name="dlNo" class="form-control" placeholder="Enter DL No.">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="psuedoName">1.13 Psuedo Name of Consultant</label>
                            <input type="text" name="psuedoName" class="form-control" placeholder="Enter Psuedo Name">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SkypeID">1.16 SkypeId</label>
                            <input type="text" name="skypeId" class="form-control" placeholder="Enter skypeId">
                        </div>
                    </div>
                </div>

            </div>
        </section>

        <!-- Section 1 Ends Here -->

        <section class="communication mt-4 mb-4">
            <div class="container">
                <div class="section-heading">

                    <h3><i class="far fa-hand-point-down"></i> 2. Resume Info</h3>
                </div>
                <hr class="style-two">
            </div>

            <div class="container section-content">
                <% for(i=0;i<6;i++){%>

                    <div class="row">
                        <div class="col-md-12">
                            <h4>PROJECT <%=i+1%>
                            </h4>
                            <hr style="width: 10% ;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="ProjectName"> Project Name</label>
                                <input type="text" name="projectName" class="form-control"
                                    placeholder="Enter Project name">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="ProjectState"> Project City</label>
                                <input type="text" name="projectCity" class="form-control"
                                    placeholder="Enter Project City">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="ProjectState"> Project State</label>
                                <input type="text" name="projectState" class="form-control"
                                    placeholder="Enter Project state">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="projectStartDate"> Project Start Date</label>
                                <input type="text" name="projectStartDate" class="form-control"
                                    placeholder="Enter Start Date">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="projectEndDate"> Project End Date</label>
                                <input type="text" name="projectEndDate" class="form-control"
                                    placeholder="Enter End Date">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="projectDescrption"> Project Description</label>
                                <textarea class="form-control text-area-comment" name="projectDescription"></textarea>
                            </div>
                        </div>
                    </div>
                    <%}%>
                        <hr style="border: 1px solid #007BFF;">
            </div>

        </section>

    </form>
    </div>
    </div>


    <%- include('../partials/footer1.ejs')%>