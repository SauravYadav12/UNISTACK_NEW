

<%- include('../partials/header1.ejs') %>


<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
              <!-- <img src="/images/unistack.png" width="20px" alt="logo"> -->
              <span style="color: #00BBF9; font-size: 48px;">Uni</span><span style="color: #FEE440; font-size: 48px;">St</span><span style="color: #ff34ac; font-size: 48px;">ack</span> 
            </div>
            <h4 class="fw-light">Sign in to continue.</h4>
             <% include ("../partials/messages.ejs") %>

            <form class="pt-3" action="/login" method="POST">

              <div class="form-group">
                <input type="email" class="form-control form-control-lg rounded" id="email" name="email" placeholder="Username">
              </div>
              <div class="form-group">
                <input type="password" class="form-control form-control-lg rounded" id="password" name="password" placeholder="Password">
              </div>
              <div class="mt-3">
                <button class="btn btn-block btn-primary btn-sm font-weight-medium auth-form-btn" type="submit">
                  SIGN IN
                </button>
              </div>
              
            </form>
            
            <div class="text-center mt-4 fw-light">
              Don't have an account? <a href="#" class="text-primary">Connect to your admin</a>
            </div>

          </div>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
