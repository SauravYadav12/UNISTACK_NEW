
<%- include('../partials/header1.ejs') %>

<!-- Requirement ID Section -->
<section class="heading mt-4 mb-4">

        <div class="container mx-auto" style="width: 500px; text-align: center">
            <h3 >Interview ID# <em style="font-size: 25px;"><%= intId %></em> </h3>
            <hr class="style-two" >
        </div>
   
<!-- Form Section Starts here -->

     
    <!-- Form Button Section  -->
    <section class="func-buttons mt-4 mb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <% if(username === "Sam"){%>
                    <form action="/generate-script" method="post">
                        <div class="form-group float-start">
                            <input type="text" name="interviewId" value="<%=interviewId%>" hidden>
                            <input type="text" name="recordId" value="<%=recordId%>" hidden>
                            <input type="text" name="consultant" value="<%=consultant%>" hidden>
                            <button class="btn btn-success text-white mb-0 me-0" style="width: auto" type="submit">Generate Script</button>
                        </div>
                    </form>
                    <%}%>
                    <div class="form-group float-end">
                        <a href="/interviews/update-interview/<%= intId %>" class="btn btn-primary text-white mb-0 me-0" style="width: 100px">Edit</a>
                        <a href="/interviews/confirmed-interviews/1" style="width: 100px" class="btn btn-danger text-white mb-0 me-0">Cancel</a>
                        <% if(role === "Admin" || role === "SuperAdmin"){ %>
                            <a href="/interviews/delete-interview/<%= intId %>" class="btn btn-warning text-white mb-0 me-0" style="width: 100px">Delete</a>
                        <%}%>
                    </div>
                </div>
            </div>
            
            <hr style="border: 1px solid #007BFF">
        </div>
    </section>
    <!-- Form Button Section Ends Here  -->
</section>
<!-- Requirement ID Section Ends Here -->   
   

