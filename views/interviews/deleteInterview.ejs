
<%- include('../partials/header1.ejs') %>


<!-- Form Section Starts here -->
<form action="/interviews/confirm-delete" method="POST">
    
     <!-- Requirement ID Section -->
     <section class="heading mt-4">

            <div class="container mx-auto form-inline" style="width: 500px; text-align: center; padding-left:5%;">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="form-group mb-2 mt-3 p-1">Interview ID # </h3>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-group form-control-plaintext" name="intId" value="<%= intId %>" style="font-size: 24px;" readonly> 
                    </div>
                </div>
                <hr class="style-two" >
            </div>
     
     <!-- Form Button Section  -->
     <section class="func-buttons mb-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group float-end">
                            <% if(username === "Sam" || username === "Anmol"){%>
                                <button type="submit" class="btn btn-primary text-white mb-0 me-0"> Confirm Delete </button>
                            <%}%>
                            <a href="/interviews/confirmed-interviews/1" class="btn btn-danger text-white mb-0 me-0" style="width: 100px">Cancel</a>
                        </div>
                    </div>
                </div>
                <hr style="border: 1px solid #007BFF">
            </div>
         </section>
    <!-- Form Button Section Ends Here  -->
    </section>
    <!-- Requirement ID Section Ends Here -->

   

<!-- Section 1 - contains information about Communication & rates -->
<section class="interview-details mt-4 mb-4"> 
 <div class="container">
     <div  class="section-heading">
         <h3><i class="far fa-hand-point-down"></i> 1. Interview Details </h3>
     </div>
     <hr class="style-two">
 </div>
 
 <div class="container section-content">
     
     <!-- Row 1 - Contains status and next Step -->
     <div class="row">
         <!-- column 1 -->
         <div class="col-md-3">
             <div class="form-group">
                <label for="interviewDate">1.1 Interview Date</label>
                 <p class="form-control view-p">
                    <%= interviewDate %>
                 </p>
             </div>
         </div>
         <!-- column 2 -->
         <div class="col-md-3">
             <div class="form-group">
                 <label for="interviewTime">1.2 Interview Time</label>
                 <p class="form-control view-p">
                        <%= interviewTime %>
                 </p>
             </div>    
         </div>
 
         <div class="col-md-3">
             <div class="form-group">
                 <label for="interviewType">1.3 Interview Type </label>
                 <p class="form-control view-p">
                        <%= interviewType %>
                 </p>
             </div>
         </div>

         <div class="col-md-3">
             <div class="form-group">
               <label for="interviewStatus">1.4 Interview Status</label>
               <p class="form-control view-p">
                    <%= interviewStatus %>
               </p>
             </div>
         </div>

     </div>
       <!-- Row 1 Ends Here -->

     <!-- Row 3 Marketing persons comments -->

     <div class="row">

         <div class="col-md-3">
             <div class="form-group">
                 <label for="consultant">1.5 Consultant</label>
                <p class="form-control view-p">
                        <%= consultant %>
                </p>
             </div>
         </div>

         <div class="col-md-3">
             <div class="form-group">
                 <label for="marketingPerson">1.6 Maketing Person</label>
                 <p class="form-control view-p">
                        <%= marketingPerson %>
                 </p>
             </div>
         </div>

         <div class="col-md-3">
             <div class="form-group">
                 <label for="vendorCompany">1.7 Vendor Company</label>
                 <p class="form-control view-p">
                        <%= vendorCompany %>
                 </p>
             </div>
         </div>

         <div class="col-md-3">
             <div class="form-group">
                 <label for="prime-vendor-company">1.8 Prime Vendor Company</label>
                 <p class="form-control view-p">
                        <%= primeVendorCompany %>
                 </p>
             </div>
         </div>

     </div>

     <div class="row">
         <div class="col-md-4">
             <div class="form-group">
                 <label for="github">1.9 Submitted Github(if Yes Enter the Link)</label>
                 <p class="form-control view-p">
                        <%= gitHubLink %>
                 </p>
             </div>
         </div>

         <div class="col-md-4">
             <div class="form-group">
                 <label for="code">1.10 Submitted Any Code(if Yes Enter the Link)</label>
                 <p class="form-control view-p">
                        <%= codeLink %>
                 </p>
             </div>
         </div>

         <div class="col-md-4">
             <div class="form-group">
                 <label for="result">1.11 Result </label>
                 <p class="form-control view-p">
                        <%= result %>
                 </p>
             </div>
         </div>
     </div>

 </div>
</section>

<!-- Section 1 Ends Here -->


<!-- Section 2 -- Contain information about Clients -->

<section class="interview-info mt-4 mb-4">

 <div class="container">
     <div class="section-heading">
         <h3><i class="far fa-hand-point-down"></i> 2. Details of Interview</h3>
     </div>
     <hr class="style-two">
 </div>


 <div class="container section-content">
     <!-- Row-1 information about client -->
     <div class="row">
         
         <div class="col-md-12">
             <div class="form-group">
                 <label for="subjectLine">2.1 Subject line (Enter Duration + Mode Of Interview + Interview With only)</label>
                 <p class="form-control view-p">
                        <%= subjectLine %>
                 </p>
             </div>
         </div>

     </div>
     <!-- Row-1 Ends Here -->

     <div class="row">

         <div class="col-md-12">
             <div class="form-group">
                 <label for="interviewMode">2.2 Interview / interviewer / Interview Mode Details</label>
                 <p class="form-control view-p">
                        <%= interviewMode %>
                 </p>
             </div>
         </div>

     </div>

     <div class="row">

         <div class="col-md-12">
             <div class="form-group">
                 <label for="interviewFocus">2.3 Interview Focus</label>
                 <p class="form-control view-p">
                        <%= interviewFocus %>
                 </p>
             </div>
         </div>

     </div>

     <div class="row">

         <div class="col-md-12">
             <div class="form-group">
                 <label for="jobDescription">2.4 Job Description</label>
                 <p class="form-control text-area-view">
                        <%= jobDescription %>
                 </p>
             </div>
         </div>

     </div>

 </div>

</section>

<!-- Section 2 Ends Here -->

<!-- Section 3 -- Contain information about Prime Vendors -->

<section class="Feedback mt-4 mb-4">
 <div class="container">
     <div class="section-heading">
         <h3><i class="far fa-hand-point-down"></i> 3. Interview Feedback</h3>
     </div>
     <hr class="style-two">
 </div>

     <div class="container section-content">
         
         <!-- Row-1 information about Feedbacks -->
         <div class="row">
             
             <div class="col-md-12">
                 <div class="form-group">
                     <label for="interviewFeedback">3.1 Feedback</label>
                     <p class="form-control text-area-comment">
                            <%= interviewFeedback %>
                     </p>
                 </div>

             </div>

         </div>
         <!-- Row-1 Ends Here -->
         
         <!-- Row-2 Prime Vendor Contact information -->
         <div class="row">
            
            <div class="col-md-3">
                <div class="form-group">
                    <label for="reqID">3.2 Req ID </label>
                   <a href="/requirements/viewReq/<%= reqID %>"> <input style="cursor: pointer; color: lightseagreen;" type="text" class="form-control" name="reqID" value="<%= reqID %>" disabled> </a> 
                </div>
            </div>

             <div class="col-md-3">
                 <div class="form-group">
                     <label for="clientName">3.2 Client Name</label>
                     <p class="form-control view-p">
                            <%= clientName %>
                     </p>
                 </div>
             </div>

             <div class="col-md-3">
                 <div class="form-group">
                     <label for="taxType">3.3 Tax type</label>
                     <p class="form-control view-p">
                            <%= taxType %>
                     </p>
                 </div>
             </div>

             <div class="col-md-3">
                 <div class="form-group">
                     <label for="duration">3.4 Duration</label>
                     <p class="form-control view-p">
                            <%= duration %>
                     </p>
                 </div>
             </div>

         </div>
         <!-- Row-2 Ends Here -->
 
 </section>

 <!-- Section 3 Ends Here  -->
    <% if(username == 'Sam' || username == 'Anmol'){ %>
         <section class="candiate-details mt-4 mb-4">

                <div class="container">
                    <div class="section-heading">
                        <h3><i class="far fa-hand-point-down"></i> 4. Interviewee Candidate details</h3>
                    </div>
                    <hr class="style-two">
                </div>

                <div class="container section-content">

                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="candidateName">4.1 Candidate name </label>
                                <p class="form-control view-p">
                                    <%= candidateName %>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="rateForInterview">4.2 Rates for Interview</label>
                                <p class="form-control view-p">
                                    <%= rateForInterview %>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="paymentStatus">4.3 Payment Status</label>
                                <p class="form-control view-p">
                                    <%= paymentStatus %>
                                </p>
                            </div>
                        </div>

                    </div>

                </div>

</section>

<!-- Section 3 Ends Here  -->
    <%}%>
 
 <div class="container">
        <hr style="border: 1px solid #007BFF">
        <div class=" float-left">
            <p> Created by <strong><%= recordOwner %></strong> on date <strong><%= createdAt.toLocaleDateString()%></strong> Time @ <strong><%= createdAt.toLocaleTimeString()%></strong></p>
        </div>

        <div class=" float-right">
            <em><p> Updated by <strong><%= updatedBy %></strong> on date <strong><%= updatedAt.toLocaleDateString()%></strong> Time @ <strong><%= updatedAt.toLocaleTimeString()%></strong></p></em>
        </div>
</div>
</form>

<!-- Form Ends here -->


