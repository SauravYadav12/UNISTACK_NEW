<%- include('../partials/header1.ejs') %>

<div class="container-scroller">
    
<%- include('../partials/nav.ejs') %>
  
  <!-- partial -->
  <div class="container-fluid page-body-wrapper">
  

  <%- include('../partials/sidebar1.ejs') %>
    
    <!-- partial -->
    <%- include('../partials/main-panel-start.ejs') %>
    

        <div class="card-body">
          <div class="d-sm-flex justify-content-between align-items-start">
            <div class="float-start">
              <h4 class="card-title card-title-dash">Todays Report Support  - <%=dateToday%> </h4>
              <p class="card-subtitle card-subtitle-dash"></p>
            </div>

            <div class="float-End">
              <h4 class="card-title card-title-dash">Total Positions Today  - <%=positionsToday.length%> </h4>
            </div>
          </div>
          <hr>
            <div class="accordion accordion-flush" id="accordionFlushExample">
          <% positionSorted.forEach((user,index) =>{ %>

              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne<%index%>">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne<%=index%>" aria-expanded="false" aria-controls="flush-collapseOne<%=index%>">
                    <%= user.name %>
                  </button>
                </h2>
                <div id="flush-collapseOne<%=index%>" class="accordion-collapse collapse mt-2 mb-2" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body">
                    <h5>Total Position Entered: <strong><a href="/reports/query/?name=<%=user.name%>&reqEnteredDate=<%=dateToday%>&type=totalPositions"><%= user.totalPositions %></a></strong> </h5>
                    <h5>Total Position Submitted: <strong><a href="/reports/query/?name=<%=user.name%>&reqEnteredDate=<%=dateToday%>&type=Submitted"><%= user.submitted %></a></strong> </h5>
                    <h5>Total Position Cancelled: <strong><a href="/reports/query/?name=<%=user.name%>&reqEnteredDate=<%=dateToday%>&type=Cancelled"><%= user.cancelled %></a></strong> </h5>
                    <h5>Called But No Response: <strong><a href="/reports/query/?name=<%=user.name%>&reqEnteredDate=<%=dateToday%>&type=Call But No Response"><%= user.cbnr %></a></strong> </h5>
                  </div>
                </div>
              </div>

          <% }) %>

            </div>

        </div>

    <%- include('../partials/main-panel-end.ejs') %>
                          
      </div>
   
    </div>
    <!-- main-panel ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<%- include('../partials/footer1.ejs')%>
