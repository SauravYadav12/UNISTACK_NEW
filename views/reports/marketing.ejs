<%- include('../partials/header1.ejs') %>

<div class="container-scroller">
    
<%- include('../partials/nav.ejs') %>
  
  <!-- partial -->
  <div class="container-fluid page-body-wrapper">
  

  <%- include('../partials/sidebar1.ejs') %>
    
    <!-- partial -->
    <%- include('../partials/main-panel-start.ejs') %>
    

        <div class="card-body">
          <div class="d-sm-flex justify-content-between align-items-start">
            <div class="float-start">
              <h4 class="card-title card-title-dash">Marketing Reports: <span class="text-primary"> From </span> <%=dateFrom%> <span class="text-primary"> To </span> <%=dateTo%> </h4>
              <p class="card-subtitle card-subtitle-dash ">Total Positions :<span class="text-danger"> <%=totalPositions%></span></p>
              <p class="card-subtitle card-subtitle-dash">Total Unassigned : <a class="text-primary" href="/reports/query/?name=&fromDate=<%=dateFrom%>&toDate=<%=dateTo%>&type=unassigned" target="_blank"><%= unassigned %></strong></a></p>
              
            </div>

            <div class="float-End">
              <form action="/reports/getMarketingReport" method="POST">
                <div class="d-flex align-items-center justify-content-center">
                  <label for="from" class="me-2">From</label>
                  <input type="date" name="fromDate" class="form-control" max="<%=dateToday%>" value="<%=dateToday%>">

                  <label for="to" class="ms-2 me-2">To</label>
                  <input type="date" name="toDate" class="form-control" max="<%=dateToday%>" value="<%=dateToday%>">

                  <button class="btn btn-primary text-white mb-0 me-0 ms-2" type="submit" >Generate</button>
                </div>
              </form>
            </div>

          </div>

          <hr>

            <div class="accordion accordion-flush" id="accordionFlushExample">
          <% sortedRecords.forEach((rec,index) =>{ %>

              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne<%index%>">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne<%=index%>" aria-expanded="false" aria-controls="flush-collapseOne<%=index%>">
                    <%= rec.marketingPerson %>
                  </button>
                </h2>
                <div id="flush-collapseOne<%=index%>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body">

                    <h5>Total Position Assigned: <strong><a href="/reports/query/?name=<%=rec.marketingPerson%>&fromDate=<%=dateFrom%>&toDate=<%=dateTo%>&type=totalAssigned" target="_blank"><%= rec.totalAssigned %></strong></a> </h5> <br>
                    <h5>Total Position Submitted: <strong><a href="/reports/query/?name=<%=rec.marketingPerson%>&fromDate=<%=dateFrom%>&toDate=<%=dateTo%>&type=Submitted" target="_blank"><%= rec.submitted %></strong> </a></h5> <br>
                    <h5>Total Position NewWorking: <strong><a href="/reports/query/?name=<%=rec.marketingPerson%>&fromDate=<%=dateFrom%>&toDate=<%=dateTo%>&type=New Working" target="_blank"><%= rec.newWorking %></strong></a> </h5> <br>
                    <h5>Total Position Cancelled: <strong><a href="/reports/query/?name=<%=rec.marketingPerson%>&fromDate=<%=dateFrom%>&toDate=<%=dateTo%>&type=Cancelled" target="_blank"><%= rec.cancelled %></strong></a> </h5> <br>
                    <h5>Called But No Response: <strong><a href="/reports/query/?name=<%=rec.marketingPerson%>&fromDate=<%=dateFrom%>&toDate=<%=dateTo%>&type=Call But No Response" target="_blank"><%= rec.cbnr %></strong></a> </h5> 
                  </div>
                </div>
              </div>

          <% }) %>

            </div>

        </div>

    <%- include('../partials/main-panel-end.ejs') %>
                          
      </div>
   
    </div>
    <!-- main-panel ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<%- include('../partials/footer1.ejs')%>
