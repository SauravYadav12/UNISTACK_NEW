<%- include('../partials/header1.ejs') %>

<div class="container-scroller">
    
<%- include('../partials/nav.ejs') %>
  
  <!-- partial -->
  <div class="container-fluid page-body-wrapper">
  

  <%- include('../partials/sidebar1.ejs') %>
    
    <!-- partial -->
    <%- include('../partials/main-panel-start.ejs') %>
    

        <div class="card-body">
          <div class="d-sm-flex justify-content-between align-items-start">
            <div class="float-start">
              <h4 class="card-title card-title-dash">Todays Report Marketing  - <%=dateToday%> </h4>
            </div>

            <div class="float-End">
              <h4 class="card-title card-title-dash">Total Positions Today  - <%=allPositions.length%> </h4>
            </div>

          </div>

          <div class="d-sm-flex justify-content-between align-items-start mt-4">
            <div class="d-flex">
              <h4 class="card-title card-title-dash pe-4">Total Unassigned positions  - <%=unassigned.length%> </h4>
              
              [<% unassigned.forEach(rec =>{%>
                <a class="card-title card-title-dash pe-2 text-primary" href="/requirements/viewReq/<%=rec.reqID%>"> <%=rec.reqID%> </a>
              <%})%>]
              <!-- <p class="card-subtitle card-subtitle-dash"></p> -->
            </div>
          </div>

          <hr>

            <div class="accordion accordion-flush" id="accordionFlushExample">
          <% sortedRecords.forEach((rec,index) =>{ %>

              <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne<%index%>">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne<%=index%>" aria-expanded="false" aria-controls="flush-collapseOne<%=index%>">
                    <%= rec.marketingPerson %>
                  </button>
                </h2>
                <div id="flush-collapseOne<%=index%>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                  <div class="accordion-body">

                    <h5>Total Position Assigned: <strong><%= rec.totalAssigned %></strong> </h5> <br>
                    <h5>Total Position Submitted: <strong><%= rec.submitted %></strong> </h5> <br>
                    <h5>Total Position NewWorking: <strong><%= rec.newWorking %></strong> </h5> <br>
                    <h5>Total Position Cancelled: <strong><%= rec.cancelled %></strong> </h5> <br>
                    <h5>Called But No Response: <strong><%= rec.cbnr %></strong> </h5> 
                  </div>
                </div>
              </div>

          <% }) %>

            </div>

        </div>

    <%- include('../partials/main-panel-end.ejs') %>
                          
      </div>
   
    </div>
    <!-- main-panel ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<%- include('../partials/footer1.ejs')%>
