<%- include('../partials/header1.ejs') %>

    <form action="/postDeletePage" method="POST">

        <!-- Requirement ID Section -->
       <section class="heading mt-4">

            <div class="container mx-auto form-inline" style="width: 500px; text-align: center; padding-left: 5%;">
                <h3 class="form-group mb-2">Requirement ID # 
                    <em> 
                        <input type="text" class="form-group mx-sm-3 form-control-plaintext" name="reqID" value="<%= reqID %>" readonly> 
                    </em> 
                </h3>
                
            </div>
       
    
         <!-- Form Button Section  -->
         <section class="func-buttons mb-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group float-end">
                            <% if(username === "Sam" || username === "Anmol"){%>
                                <button type="submit" class="btn btn-primary text-white mb-0 me-0"> Confirm Delete </button>
                            <%}%>
                            <a href="/requirements/reqlist/1" class="btn btn-danger text-white mb-0 me-0" style="width: 100px">Cancel</a>
                        </div>
                    </div>
                </div>
                <hr style="border: 1px solid #007BFF">
            </div>
         </section>
    <!-- Form Button Section Ends Here  -->

    </section>
    <!-- Requirement ID Section Ends Here -->

     <!-- Section 1 - contains information about Communication & rates -->
    <section class="communication mt-4 mb-4"> 
        <div class="container">
            <div  class="section-heading">
                
                <h3><i class="far fa-hand-point-down"></i> 1. Requirement & Communication</h3>
            </div>
            <hr class="style-two">
        </div>
        
        <div class="container section-content">
            
            <!-- Row 1 - Contains status and next Step -->
            <div class="row">
                <!-- column 1 -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="status"> <strong>1.1 Req Status</strong></label>
                        <p class="form-control view-p">
                           <%= reqStatus %>
                        </p>
                    </div>
                </div>
                <!-- column 2 -->
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="nextStep"> <strong>1.2 Next Step</strong></label>
                        <p class="form-control view-p"> 
                            <%= nextStep %>
                        </p>
                    </div>    
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="consultantName">1.3 Applied For</label>
                        <p class="form-control view-p"> 
                                <%= appliedFor %>
                        </p>
                    </div>    
                </div>

            </div>
            <!-- Row 1 Ends Here -->

            <!-- Row 2 - Contains information about tax term and Remote -->
            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="rate"> <strong>1.3 Rate</strong></label>
                        
                        <% rate.slice().reverse().forEach( r => {%><p class="form-control view-p"><%= r %></p> <%});%>
                            
                        
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                      <label for="taxType"> <strong>1.4 Tax Type</strong> </label>
                      <% taxType.slice().reverse().forEach( tax => {%><p class="form-control view-p"><%= tax %></p> <%});%>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="remote"> <strong>1.5 Remote %</strong> </label>
                        <% remote.slice().reverse().forEach( rem => {%><p class="form-control view-p"><%= rem %></p> <%});%>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="duration"> <strong>1.6 Duration</strong> </label>
                        <% duration.slice().reverse().forEach( d => {%><p class="form-control view-p"><%= d %></p> <%});%>
                    </div>
                </div>

            </div>
            <!-- ROW 2 Ends Here -->

            <!-- Row 3 Marketing persons comments -->

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="mComment"> <strong>1.7 Marketing Person's Comment</strong> </label>
                        <%mComment.slice().reverse().forEach((comment)=>{%><textarea class="form-control" readonly>[<%=comment.created_at.toLocaleString()%> <%= comment.user%>] <%= comment.comment %></textarea><%});%>
                    </div>
                </div>
            </div>

        </div>
    </section>
    
    <!-- Section 1 Ends Here -->


    <!-- Section 2 -- Contain information about Clients -->

    <section class="client-info mt-4 mb-4">

        <div class="container">
            <div class="section-heading">
                <h3><i class="far fa-hand-point-down"></i> 2. Client Info</h3>
            </div>
            <hr class="style-two">
        </div>


        <div class="container section-content">
            <!-- Row-1 information about client -->
            <div class="row">
                
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="client-name"> <strong>2.1 Client Company</strong> </label>
                        <p class="form-control view-p">
                            <%= clientCompany %>
                        </p>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="client-website"> <strong>2.2 Client Website</strong> </label>
                        <p class="form-control view-p">
                            <%= clientWebsite %>
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="client-address"> <strong>2.3 Client Address</strong> </label>
                        <p class="form-control view-p">
                           <%= clientAddress %>
                        </p>
                    </div>
                </div>

            </div>
            <!-- Row-1 Ends Here -->

            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="client-person"> <strong>2.4 Client Person Name</strong> </label>
                        <p class="form-control view-p">
                            <%= clientPerson %>
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="client-phone"> <strong>2.5 Client Phone number</strong> </label>
                        <p class="form-control view-p">
                            <%= clientPhone %>
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="client-email"> <strong>2.6 Client Email</strong> </label>
                        <p class="form-control view-p">
                            <%= clientEmail %>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    
    </section>

    <!-- Section 2 Ends Here -->

    <!-- Section 3 -- Contain information about Prime Vendors -->

     <section class="primeVendor-info mt-4 mb-4">
        <div class="container">
            <div class="section-heading">
                <h3><i class="far fa-hand-point-down"></i> 3. Prime Vendor Info</h3>
            </div>
            <hr class="style-two">
        </div>

            <div class="container section-content">
                
                <!-- Row-1 information about Prime Vendors -->
                <div class="row">
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="primeVendor-name"> <strong>3.1 Prime Vendor Company</strong> </label>
                            <p class="form-control view-p">
                                    <%= primeVendorCompany %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="primeVendor-website"> <strong>3.2 Prime Vendor Website</strong> </label>
                            <p class="form-control view-p">
                                <%= primeVendorWebsite %>
                            </p>
                        </div>
                    </div>
    
                </div>
                <!-- Row-1 Ends Here -->
                
                <!-- Row-2 Prime Vendor Contact information -->
                <div class="row">
    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="primeVendor-person"> <strong>3.3 Prime Vendor Person Name</strong> </label>
                            <p class="form-control view-p"> 
                                <%= primeVendorName%>
                            </p>
                        </div>
                    </div>
    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="primeVendor-phone"> <strong>3.4 Prime Vendor Phone number</strong> </label>
                            <p class="form-control view-p">
                                <%= primeVendorPhone %>
                            </p>
                        </div>
                    </div>
    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="primeVendor-email"> <strong>3.5 Prime Vendor Email</strong> </label>
                            <p class="form-control view-p">
                                <%= primeVendorEmail %>
                            </p>
                        </div>
                    </div>
    
                </div>
                <!-- Row-2 Ends Here -->
            </div>
        
        </section>

        <!-- Section 3 Ends Here  -->


        <!-- Section 4 - contains information about Layer or vendor company -->

        <section class="vendor-info mt-4 mb-4">
        
            <div class="container">
                <div class="section-heading">
                    <h3><i class="far fa-hand-point-down"></i> 4. Vendor Info</h3>
                </div>
                <hr class="style-two">
            </div>

                <div class="container section-content">
                    
                    <!-- Row-1 information about Vendors -->
                    <div class="row">
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="vendor-name"> <strong>4.1 Vendor Company</strong> </label>
                                <p class="form-control view-p">
                                    <%= vendorCompany %>
                                </p>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="vendor-website"> <strong>4.2 Vendor Website</strong> </label>
                                <p class="form-control view-p">
                                    <%= vendorWebsite %>    
                                </p>
                            </div>
                        </div>
        
                    </div>
                    <!-- Row-1 Ends Here -->
                    
                    <!-- Row-2 Vendor Contact information -->
                    <div class="row">
        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="vendor-person"> <strong>4.3 Vendor Person Name</strong> </label>
                                <p class="form-control view-p">
                                    <%= vendorPersonName %>
                                </p>
                            </div>
                        </div>
        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="vendor-phone">  <strong>4.4 Vendor Phone number</strong></label>
                                <p class="form-control view-p">
                                    <%= vendorPhone %> 
                                </p>
                            </div>
                        </div>
        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="vendor-email"> <strong>4.5 Vendor Email</strong> </label>
                                <p class="form-control view-p">
                                    <%= vendorEmail %>
                                </p>
                            </div>
                        </div>
        
                    </div>
                    <!-- Row-2 Ends Here -->
                </div>
            
            </section>

            <!-- Section 4 - Ends Here -->

            <!-- Section 5 - Contains information about the JOB  -->
            <section class="job-requirement mt-4 mb-4">
                
                <div class="container">
                    <div class="section-heading">
                        <h3><i class="far fa-hand-point-down"></i> 5. Job Requirement Info</h3>
                    </div>
                    <hr class="style-two">
                </div>

                <div class="container section-content">
                    
                    <!-- Row -1 - Starts here contains info about JOB  -->
                    <div class="row">
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="requirement-date"> <strong>5.1 Requirement Entered Date</strong> </label>
                                <p class="form-control view-p">
                                    <%= reqEnteredDate %>
                                </p>
                            </div>   
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="requirement-date"> <strong>5.2 Got Requirement from</strong> </label>
                                <p class="form-control view-p">
                                    <%= gotReqFrom %>
                                </p>
                            </div>   
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="got-from"> <strong>5.3 Got on Resume</strong> </label>
                                <p class="form-control view-p">
                                    <%= gotOnResume %>
                                </p>
                            </div>
                        </div>

                    </div>
                     <!-- Row 1 - Ends Here -->

                     <!-- Row-2 Starts here - Job Description -->
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="job-title"> <strong>5.4 Job Title</strong> </label>
                                <p class="form-control view-p">
                                    <%= jobTitle %>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="employement-type"> <strong>5.5 Employement Type (If Mentioned)</strong>  </label>
                                <p class="form-control view-p">
                                    <%= employementType %>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="portal-link"> <strong>5.6 Job Portal Link</strong> </label>
                                <p class="form-control view-p">
                                    <%= jobPortalLink %>
                                </p>
                            </div>
                        </div>

                    </div>
                    <!-- Row-2 Ends Here - Job Description -->

                    <!-- Row-3 - Technical Keywords -->
                    <div class="row">
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="support-person"> <strong>5.7 Requirement Entered By</strong> </label>
                                <p class="form-control view-p">
                                    <%= reqEnteredBy %>
                                </p>
                            </div>
                        </div>
                        <%if(reqKeywords){%>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label for="keywords"> <strong>5.9 Enter the Requirement keyword (sorted out from Job Description)</strong>  </label>
                                    <p class="form-control view-p">
                                        <%= reqKeywords %> 
                                    </p>
                                </div>
                            </div>
                        <%}%>
                    </div>
                    <!-- Row-3 Ends Here - Technical Keywords -->

                    <!-- Row-4 Starts - Job Description Complete -->
                    
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="job-description"> <strong>5.9 Complete Job Description</strong> </label>
                                <p class="form-control view-p">
                                  <%= jobDescription %>                                       
                                </p>
                            </div>
                        </div>

                    </div>
                    <!-- Row-4 Ends here     -->
                </div>

            </section>
            <!-- Section 5 Ends Here -->
             
    </form>

    <!-- Form Ends here -->

